@page
@model LitskevichVK.Pages.AboutModel


<h2 class="page-title">Биография Владимира Лицкевича</h2>

<article id="biography" class="my-5">
    <div id="photos" class="center-block">
        @foreach (var pic in Model.Photos)
        {
            <img alt="@pic.Title"
                 title="@pic.Title"
                 src="@pic.Url"
                 data-image="@pic.Url"
                 data-description="@pic.Comment"
                 style="display:none" />
        }
    </div>

    <section class="mt-5">
        <partial name="_Biography" />
    </section>
</article>


